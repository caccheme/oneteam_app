<h3><%= flash[:notice] %></h3>

<h1>Log in to OneTeam</h1>

<%= form_tag sessions_path do %>
  <p>
  	<%= label_tag :email %><br />
  	<%= text_field_tag :email, params[:email] %>
  </p>
  <p>
  	<%= label_tag :password %><br />
  	<%= password_field_tag :password %>
  </p>
  <p><%= submit_tag 'Log in' %></p>
<% end %>

<p>New to OneTeam?
<%= link_to 'Sign up and create your OneTeam profile', new_employee_path %>
</p>

