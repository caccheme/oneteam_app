<%= hidden_field_tag "request[relevant_skills][]", "" %>

<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "40x6" %>
  </div>
  <div class="field">
    <%= f.hidden_field :employee_id, :value => current_employee.id %>
  </div>
   
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.text_field :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.text_field :end_date %>
  </div>

  <%= f.label :relevant_skills %>
     <% @skills.each do |skill| %>
     <div class = "inbox">
       <%= check_box_tag "relevant_skills[]", skill.language %>
       <%= skill.language %>
      </div> 
     <% end %>
  
 <div class="field">
    <%= f.label :group %><br />
    <%= f.select :group, ['Development', 'Strategy'] %>
  </div>
  <div class="field">
    <%= f.label :location, "Office" %><br />
    <%= f.select :location, ['NY', 'AR', 'IL', 'UK', 'CA'] %>
  </div>
  <div class="field">
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<p></p>