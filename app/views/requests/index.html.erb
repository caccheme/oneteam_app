<p id="notice"><%= notice %></p>

<div id="tabs"> 
  <ul>
    <li id="selected"><%= link_to 'All Requests', requests_path%></li>
    <li><%= link_to "Requests I've Posted",  'my_requests' %></li>
    <li><%= link_to 'Developer Assignments', commissions_path %></li>
    <li><%= link_to 'My Profile', employee_path(current_employee) %></li> 
  </ul>
</div>

<div id="innercontainer">

<p><%= link_to 'Create a New Request', new_request_path %></p>

<h1>All Requests</h1>

<%= paginate @requests %>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Start Date</th>
    <th>End Date</th>
  </tr>

<% @requests.each do |request| %>
  <tr >
    <td><%= request.title %></td>
    <td><%= request.description %></td>
    <td><%= request.project_status %></td>
    <td><%= request.start_date %></td>
    <td><%= request.end_date %></td>
    <td><%= link_to 'Details', request %></td>
    <td><%= link_to 'Apply', new_request_response_path(request) %></td>
    <% if author? (request)%>
      <td><%= link_to 'Edit', edit_request_path(request, @response) %></td>
      <td><%= link_to 'Delete', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Select volunteer', request_responses_path(request) %></td>
    <% end %>
  </tr>
<% end %>
</table>
</br>
</div>