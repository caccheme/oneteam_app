
<% content_for :side do %>
  <h4>Side Bar Header for Requests List</h4>
  <p>Lorem ipsum dolor sit amet, consectetur adipsicing elit, sed do eiusmud tempor incididunt ut labore et dolore magna alique.
  </p>
<% end %>

<h1>Listing Requests</h1>

<p>Enter 'Open', 'Assigned', or 'Completed' to view Requests by Status</p>

<%= form_tag requests_path, :method => "get" do %>
  <p>
     <%= text_field_tag :search, params[:search]  %>
     <%= submit_tag "Search by Request Status", :status => nil %>
  </p>
<% end %>

<table>
  <tr>
    <th>Request ID</th>
    <th>Description</th>
    <th>Status</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th>Are you interested?</th>
  </tr>

<% @requests.each do |request| %>
  <tr class="<%= cycle :odd, :even %>">
    <td><%= request.id %></td>
    <td><%= request.description %></td>
    <td><%= request.status %></td>
    <td><%= request.start_date %></td>
    <td><%= request.end_date %></td>
    <td><%= link_to 'Change Request', edit_request_path(request, @response) %></td>
    <td><%= link_to 'Remove Request', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Details', request %></td>
    <td><%= link_to 'Responses', request_responses_path(request) %></td>
    <td><%= link_to 'Volunteer/Respond', new_request_response_path(request) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create a New Request', new_request_path %>
