<p id="notice"><%= notice %></p>

<div id="tabs"> 
  <ul>
    <li id="selected"><%= link_to 'All Requests', requests_path%></li>
    <li><%= link_to "Requests I've Posted",  'my_requests' %></li>
    <li><%= link_to 'Developer Assignments', commissions_path %></li>
    <li><%= link_to 'My Profile', employee_path(current_employee) %></li> 
  </ul>
</div>

<div id="innercontainer">

<h1>All Requests</h1><%= link_to "View Calendar", 'requests_calendar' %>

<div id="requests">
<% @requests.each do |request| %>
      ----------------------------------------------------------------------------------------------------
  <p><b><%= request.title %></b> 
        <%= request.start_date %> to <%= request.end_date %> (Status: <%= request.project_status %>)</p>
        Posted by: <%= Employee.find(request[:employee_id]).first_name %> <%= Employee.find(request[:employee_id]).last_name %> in <%= Employee.find(request[:employee_id]).location %> Office (Group: <%= Employee.find(request[:employee_id]).group %>)</br>
        Description: <%= request.description %>
  </p>

     <% responses = request.get_responses %>
     <% responses.each do |response| %>
        <% if response.employee_id == current_employee.id %>    
           <%= "Applied" %>        
        <% else %> 
            <%= link_to "Apply", new_request_response_path(request) %> 
        <% end %> 
      <% end %>

  <p></p>
    
<% end %>  

</div>