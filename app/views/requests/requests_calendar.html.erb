<p id="notice"><%= notice %></p>

<div id="tabs"> 
  <ul>
    <li id="selected"><%= link_to 'Requests Calendar', requests_path%></li>
    <li><%= link_to "Requests I've Posted",  'my_requests' %></li>
    <li><%= link_to 'My Profile', employee_path(current_employee) %></li> 
  </ul>
</div>

<div id="innercontainer">

<h1>Requests Calendar</h1><%= link_to "View List", requests_path %>
<div id="requests">

<h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @requests_by_date[date] %>
      <ul>
        <% @requests_by_date[date].each do |request| %>
          <li><%= link_to request.title, request %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</br>
</div>

