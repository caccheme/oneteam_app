<p id="notice"><%= notice %></p>

<div id="tabs"> 
  <ul>
    <li><%= link_to 'All Requests', requests_path%></li>
    <li id="selected"><%= link_to "Requests I've Posted" %></li>
    <li><%= link_to 'Developer Assignments', commissions_path %></li>
    <li><%= link_to 'My Profile', employee_path(current_employee) %></li>     
  </ul>
</div>

<div id="innercontainer">

<p><%= link_to 'Create a New Request', new_request_path %></p>

<h1>Requests I've Posted:</h1><%= link_to "View Calendar", 'my_requests_calendar' %>

<div id="requests">
<% @requests.each do |request| %>
  <% if author? (request) %> 
  ----------------------------------------------------------------------------------------------------    
  <p><b><%= request.title %></b> <%= request.start_date %> to <%= request.end_date %> (Status: <%= request.status %>)</p>
   Posted by: <%= Employee.find(request[:employee_id]).first_name %> <%= Employee.find(request[:employee_id]).last_name %> in <%= Employee.find(request[:employee_id]).location %> Office (Group: <%= Employee.find(request[:employee_id]).group %>)</br>
    Description: <%= request.description %>
    
  <p> <%= link_to 'Details', request %>    | 
      <%= link_to 'Edit Request', edit_request_path(request, @response) %>  |
      <%= link_to 'Delete', request, method: :delete, data: { confirm: 'Are you sure?' } %>  |
      <%= link_to 'Select volunteer', request_responses_path(request) %></p>

 <p><%= request.responses %></p>

    <% end %>

<% end %>  
</div>

</div>