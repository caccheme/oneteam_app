<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :location, label: 'Office', :collection => ['Boston', 'Chicago', 'Los Angeles', 'Bentonville', 'Ontario', 'Tokyo', 'London', 'Paris'] %>
  <%= f.input :group, :collection => ['Development', 'Strategy', 'Management'] %>
  <%= f.input :position, label: 'Job title' %>
  <%= f.input :manager, label: 'Direct Supervisor' %></br>
  <%= f.input :years_with_company %></br>
  <%= f.label :description, label: 'Describe yourself in a few words' %>
  <%= f.text_area :description %></br>
  <%= image_tag @employee.image_url, :height => 100 %>
  <%= f.file_field :image %>
  <%= f.input :skills, as: :check_boxes, :collection => ['PHP', 'MySQL', 'C#', 'Apache', 'Ruby on Rails', 'SQL Server', 'Linux'] %>
   <%= f.input :skills_interested_in, as: :check_boxes, :collection => ['PHP', 'MySQL', 'C#', 'Apache', 'Ruby on Rails', 'SQL Server', 'Linux'] %></br>
  <%= f.input :password %>
  <%= f.error :base %>
  <%= f.button :submit %> 
  <%= f.submit 'Cancel' %>
<% end %>