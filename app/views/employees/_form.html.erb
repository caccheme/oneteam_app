<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name, :wrapper_html => { :class => "inline" } %>
  <%= f.input :last_name, :wrapper_html => { :class => "inline" } %></br>
  <%= f.input :email, :wrapper_html => { :class => "inline"}, :input_html => { :class => "text"} %>
  <%= f.input :location, label: 'Office', :collection => ['NY', 'IL', 'AR', 'TX', 'JPN', 'UK', 'FR'], :wrapper_html => { :class => "inline"} %>
  <%= f.input :department, label: 'Department', :collection => ['IT', 'HR'] %>
  <%= f.input :group, :collection => ['Dev.', 'Str', 'Res.'], :wrapper_html => { :class => "inline"} %>
  <%= f.input :position, label: 'Job title', :wrapper_html => { :class => "inline"} %>
  <%= f.input :manager, label: 'Direct Supervisor' %></br>
  <%= f.input :years_with_company, :input_html => { :cols => 2 }  %></br>
  <%= f.input :description, as: :text, label: 'Describe yourself in a few words', :input_html => { :class => 'textarea'} %>

  <%= "Current Image:" %></br>
  <%= image_tag @employee.image_url, :height => 80 %>
  <%= f.file_field :image %></br>

  <%= f.input :current_skills, :collection => ['PHP', 'MySQL', 'C#', 'Apache', 'Ruby on Rails', 'SQL Server', 'Linux'], as: :check_boxes, :input_html => { :values => [@employee.current_skills] } %>
  <%= f.input :desired_skills, :collection => ['PHP', 'MySQL', 'C#', 'Apache', 'Ruby on Rails', 'SQL Server', 'Linux'], as: :check_boxes %>
  <%= f.error :base %>
  <%= f.button :submit %> 
  <%= f.submit 'Cancel' %>
<% end %>