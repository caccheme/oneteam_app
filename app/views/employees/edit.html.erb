<div id="tabs"> 
  <ul>
    <li><%= link_to 'All Requests', requests_path%></li>
    <li><%= link_to "Requests I've Posted",  _my_requests_path %></li>
    <li><%= link_to 'Developer Assignments', commissions_path %></li>
    <li id="selected"><%= link_to 'Update My Profile', edit_employee_path(current_employee) %></li>
  </ul>
</div>

<div id="innercontainer">
</br>

  <h1>Update Profile</h1>

  <%= form_for(@employee) do |f| %>
    <% if @employee.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

        <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div id="field">
      <ul>
        <li><%= f.label :first_name %>  <%= f.text_field :first_name %></li>
        <li><%= f.label :last_name %>  <%= f.text_field :last_name %></li>
      </ul>
    </div>
    
  <div id="field">
    <ul>
      <li><%= f.label :email %> <%= f.text_field :email %></li>
    </ul>
  </div>

    <div id="field">
      <ul>        
        <li><%= f.label 'Office' %>  <%= f.select :location, ['Boston', 'Chicago', 'Los Angeles', 'Bentonville', 'Ontario', 'Tokyo', 'London', 'Paris'], :selected => 'Boston' %></li>
        <li><%= f.label :department %>  <%= f.select :department, ['IT', 'HR', 'Marketing', 'Research', 'QA', 'Sales'], :selected => 'IT' %></li>
        <li><%= f.label :group %>  <%= f.select :group, ['Development', 'Strategy', 'Management'], :selected => 'Development' %></li>
      <ul>
    </div>

    <div id="field">
      <ul>        
        <li><%= f.label 'Job title' %>  <%= f.text_field :position %></li>
        <li><%= f.label 'Supervisor' %>  <%= f.text_field :manager %></li>
      </ul>
    </div>

    <div id="field">
      <ul>
        <li><%= f.label :years_with_company %>  <%= f.number_field :years_with_company %></li>
      </ul>
    </div>

    <div id="field">
      <ul>
        <li><%= f.label 'Write a short description about yourself:' %></br>  <%= f.text_area :description %></li>
        <li><%= image_tag "profile-avatar.png" %>  <%= link_to "Upload Photo" %></li>
      </ul>
    </div>

    <div id="field">
      <ul>
        <li><%= f.label :skills %>  <%= f.text_field :skills %></li>
        <li><%= f.label :skills_interested_in %>  <%= f.text_field :skills_interested_in %></li>
      </ul>
    </div>

    <div class="actions">
      <%= f.submit 'Update Profile' %>
    </div>
  <% end %>

<div id="button">
  <%= link_to 'Cancel', @employee %> 
</div>

</div>